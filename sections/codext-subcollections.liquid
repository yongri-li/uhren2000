{% comment %}
  Dieses Schema erlaubt es, die Titel von Kollektionen in einer Section darzustellen.
  Die Kollektionen werden aus dem Metafeld 'custom.subcollections' ausgelesen.
{% endcomment %}

<section>
  {% if section.settings.show_subcollections %}
    <div class="subcollections">
      {% assign subcollection_handles = collection.metafields.custom.subcollections %}

      {% for handle in subcollection_handles %}
        {% assign subcollection = collections[handle] %}
        <div class="subcollection">
          <h3>{{ subcollection.title }}</h3>
        </div>
      {% endfor %}
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Subkollektionen Titel",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_subcollections",
      "label": "Subkollektionen anzeigen",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Codext-Subcollections"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.subcollections {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.subcollection {
  flex-basis: 30%;
  margin-bottom: 1em;
}
{% endstylesheet %}
