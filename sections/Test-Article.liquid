{% schema %}
{
  "name": "Alphabetical Blog Titles",
  "settings": [
    {
      "type": "blog",
      "id": "blog",
      "label": "Select Blog",
      "info": "Choose the blog to display articles from alphabetically."
    }
  ],
  "blocks": [
    {
      "type": "letter_block",
      "name": "Letter Block",
      "settings": [
        {
          "type": "text",
          "id": "letter",
          "label": "Enter Letter",
          "default": "A"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Test"
    }
  ]
}
{% endschema %}

<style>
  .blog-titles-lexicon .letter-group {
    display: flex;
    align-items: center;
    padding: 10px 0;
  }
  .blog-titles-lexicon .letter-group:nth-child(odd) {
    background-color: #f2f2f2; /* Adjust the color to match your screenshot or theme */
  }
  .blog-titles-lexicon .letter-group:nth-child(even) {
    background-color: #ffffff;
  }
  .blog-titles-lexicon h2 {
    margin: 0;
    padding-right: 20px; /* Adjust spacing as needed */
    flex-shrink: 0;
  }
  .blog-titles-lexicon ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    align-items: center;
  }
  .blog-titles-lexicon li a {
    display: block;
    text-decoration: none;
    background-color: #fff; /* Use your theme's button color */
    color: #333; /* Use your theme's button text color */
    padding: 10px 20px; /* Adjust padding as needed */
    border-radius: 4px; /* Match your theme's button border-radius */
    border: 1px solid #ccc; /* Match your theme's button border */
    transition: background-color 0.3s;
  }
  .blog-titles-lexicon li a:hover {
    background-color: #ebebeb; /* Slightly lighter on hover */
  }
</style>

<div class="blog-titles-lexicon">
  {% if section.blocks.size > 0 %}
    {% assign selected_blog_handle = section.settings.blog %}
    {% assign articles = blogs[selected_blog_handle].articles %}
    {% for block in section.blocks %}
      {% assign letter = block.settings.letter | upcase %}
      <div class="letter-group">
        <h2>{{ letter }}</h2>
        <ul>
          {% for article in articles %}
            {% assign first_letter = article.title | slice: 0, 1 | upcase %}
            {% if first_letter == letter %}
              <li><a href="{{ article.url }}" class="button">{{ article.title }}</a></li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    {% endfor %}
  {% endif %}
</div>