{% comment %}theme-check-disable ImgLazyLoading{% endcomment %}
{% liquid
  assign color_palette_handle = 'palette_' | append: section.settings.color_palette
  assign color_palette = settings[color_palette_handle] | upcase
  assign background_color = settings.body_background_color | upcase
  if color_palette != background_color
    assign overlay = true
  endif
-%}

<article class="palette-{{ section.settings.color_palette }}
  {% if overlay %}
    overlay
    no-border
  {% endif %}
  module-color-palette
  m6as
  {{ section.settings.text_position }}
  {% if section.settings.layout == 'image-right' %}inv{% endif %}
  size-{{ section.settings.height }}
  {% if section.settings.width == 'wide' %}wide{% else %}boxed{% endif %}
  ">
  <figure {% unless section.settings.image or section.settings.video_url %}class="no-img"{% endunless %}>
    {%- if section.settings.image -%}
      <span class="img-overlay" style="opacity:{{ section.settings.overlay_opacity | divided_by: 100.0 }}"></span>
      {% if section.settings.video %}
        {%- liquid
          assign source = section.settings.video.sources | where: "height", 1080 | where: "format", "mp4" | first
          if source == nil
            assign source = section.settings.video.sources | where: "format", "mp4" | first
          endif
          if source == nil
            assign source = section.settings.video.sources | where: "format", "mov" | first
          endif
          if source == nil
            assign source = section.settings.video.sources.first
          endif
        -%}
        <a data-fancybox="section-aside-{{ section.id }}" data-title="{{ section.settings.video.alt | escape }}" href="{{ source.url }}">
      {% elsif section.settings.video_url != blank %}
        <a data-fancybox="section-aside-{{ section.id }}" data-title="{{ section.settings.video_alt_text | escape }}" href="{{ section.settings.video_url }}">
      {% endif %}
      <picture>
        <img
                src="{{ section.settings.image | image_url: width: 100, height: 100, width: 640 }}"
                srcset="{% render 'image-srcset', image: section.settings.image %}"
                sizes="
              {% if settings.width < 2000 %}
                (min-width: 1300px) calc({{ settings.width }}px / 2),
              {% endif %}
              (min-width: 760px) calc(100vw / 2),
              100vw
            "
                width="640"
                height="530"
                alt="{{ section.settings.image.alt | default: section.settings.title | escape }}"
                loading="{% if section.index > 1 %}lazy{% else %}eager{% endif %}"
        >
      </picture>
      {%- if section.settings.video or section.settings.video_url != blank %}
        <i aria-hidden="true" class="icon-play"></i></a>
      {%- endif -%}
    {% elsif section.settings.video or section.settings.video_url != blank %}
      {%- if section.settings.video %}
        {%- liquid
          assign source = section.settings.video.sources | where: "height", 1080 | where: "format", "mp4" | first
          if source == nil
            assign source = section.settings.video.sources | where: "format", "mp4" | first
          endif
          if source == nil
            assign source = section.settings.video.sources | where: "format", "mov" | first
          endif
          if source == nil
            assign source = section.settings.video.sources.first
          endif
        -%}
        <video class="lazy" autoplay muted loop playsinline poster="{{ section.settings.video.preview_image | image_url }}">
          <source data-src="{{ source.url }}" type="video/mp4">
        </video>
      {% else %}
        <iframe width="640" height="360" src="{{ section.settings.video_url | replace: 'watch?v=', 'embed/' | replace: '//vimeo.com/', '//player.vimeo.com/video/' }}" title="{{ section.settings.video_alt_text | escape }}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      {% endif %}
    {% else %}
      <span class="img-overlay" style="opacity:{{ section.settings.overlay_opacity | divided_by: 100.0 }}"></span>
      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
    {%- endif -%}
  </figure>

  <div>
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when '@app' -%}
          {% render block %}
        {%- when 'spacer' -%}
          <div class="module-spacer" style="margin-bottom:{{ block.settings.height }}px;" {{ block.shopify_attributes }}></div>
        {% when 'title' -%}
          {%- liquid
            assign no_margin = false
            assign next_block = forloop.index
            if section.blocks[next_block].type == 'title'
              assign no_margin = true
            endif
          -%}
          {%- if block.settings.title -%}<{{ block.settings.title_size }} class="ff-{{ block.settings.title_font }}{% if block.settings.enable_custom_text_styling %} text-palette-{{ block.settings.title_color_palette }} fw-{{ block.settings.title_weight }}{% endif %} {% if no_margin %}m0{% else %}m20{% endif %}" {{ block.shopify_attributes }}>{{ block.settings.title }}</{{ block.settings.title_size }}>{%- endif -%}
        {% when 'text' -%}
          {% if block.settings.text != empty %}
            <div class="ff-{{ block.settings.font }} fw-{{ block.settings.font_weight }}" style="font-size:{{ block.settings.font_size }};" {{ block.shopify_attributes }}>
              {{ block.settings.text }}
            </div>
          {% endif %}
        {% when 'usp' -%}
          <ul class="l4ch ff-{{ block.settings.font }}" style="font-size:{{ block.settings.font_size }};" {{ block.shopify_attributes }}>
            {%- if block.settings.usp != empty -%}<li>{{ block.settings.usp }}</li>{%- endif -%}
          </ul>
        {% when 'buttons' -%}
          {%- liquid
            if block.settings.link_text_1 != empty and block.settings.link_url_1 != blank
              assign show_buttons = true
            endif
            if block.settings.link_text_2 != empty and block.settings.link_url_2 != blank
              assign show_buttons = true
            endif
          -%}
          {%- if show_buttons -%}
            <p {% unless block.settings.show_link %}class="link-btn"{% endunless %} {{ block.shopify_attributes }}>
                {%- if block.settings.link_text_1 != empty and block.settings.link_url_1 != blank -%}
                  <a href="{{ block.settings.link_url_1 }}" class="{% if block.settings.show_link_1 %}strong inline{% elsif block.settings.button_style_1 == 'inv' %} inv{% endif %} button-palette-{{ block.settings.button_color_palette_1 }}">{{ block.settings.link_text_1 }}&nbsp;<i aria-hidden="true" class="icon-chevron-right{% unless block.settings.show_link_1 %}mobile-only{% endunless %}"></i></a>
                {%- endif %}
              {%- if block.settings.link_text_2 != empty and block.settings.link_url_2 != blank -%}
                <a href="{{ block.settings.link_url_2 }}" class="{% if block.settings.show_link_2 %}strong inline{% elsif block.settings.button_style_2 == 'inv' %} inv{% endif %} button-palette-{{ block.settings.button_color_palette_2 }}">{{ block.settings.link_text_2 }}&nbsp;<i aria-hidden="true" class="icon-chevron-right{% unless block.settings.show_link_2 %}mobile-only{% endunless %}"></i></a>
              {%- endif %}
            </p>
          {%- endif -%}
      {%- endcase -%}
    {%- endfor -%}
  </div>
</article>

<style>
  #shopify-section-{{ section.id }} { z-index: {{ section.settings.fix_zindex }}!important; }
  @media only screen and (min-width: 47.5em) {
    #shopify-section-{{ section.id }} .m6as { margin-bottom: {{ section.settings.spacing_desktop | minus: 26 }}px; }
    {% if section.settings.enable_custom_height %}
      #shopify-section-{{ section.id }} .m6as { --mih: {{ section.settings.custom_height }}px; }
    {% endif %}
    {% if section.settings.spacing_desktop < 0 %}
      #shopify-section-{{ section.id }} + *.has-kinetic-text { pointer-events: none; }
    {% endif %}
  }
  @media only screen and (max-width: 47.5em) {
    #shopify-section-{{ section.id }} .m6as { margin-bottom: {{ section.settings.spacing_mobile | minus: 20 }}px; }
    {% if section.settings.spacing_mobile < 0 %}
      #shopify-section-{{ section.id }} + *.has-kinetic-text { pointer-events: none; }
    {% endif %}
  }
</style>

