            {% if sonstiges_values != blank %}
            <tr>
              <td>{{ 'product.func_feature_miscellaneous' | t }}</td>
              <td>{{ sonstiges_values | remove_last: ", " }}</td>
            </tr>
            {% endif %}
          </table>
        </div>
      </div>
    </div>
  </div>
</div>