{% schema %}
{
  "name": "Codext-Lexikon-Navigation",
  "settings": [
    {
      "type": "blog",
      "id": "blog",
      "label": "Select Blog",
      "info": "Choose the blog to display articles from alphabetically."
    }
  ],
  "blocks": [
    {
      "type": "letter_block",
      "name": "Letter Block",
      "settings": [
        {
          "type": "text",
          "id": "letter",
          "label": "Enter Letter",
          "default": "A"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Codext-Lexikon-Nav"
    }
  ]
}
{% endschema %}

<style>
  .blog-titles-lexicon .letter-group {
    display: flex;
    align-items: center;
    padding: 10px 0;
  }
  .blog-titles-lexicon .letter-group:nth-child(odd) {
    background-color: #f5f5f5; /* Adjust the color to match your screenshot or theme */
  }
  .blog-titles-lexicon .letter-group:nth-child(even) {
    background-color: #ffffff;
  }
  .blog-titles-lexicon h2 {
  margin: 0;
  padding-right: 30px; /* Adjust spacing as needed */
  padding-left: 30px;
  flex-shrink: 0;
  font-size: 100px;
  font-family: "Georgia Pro Light", Georgia, serif;
  font-weight: 400;
  width: 150px; /* Fixed width for all H2 elements */
  text-align: center; /* Center the letter in the fixed width */
  }
  .blog-titles-lexicon ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    align-items: center;
  }
  .blog-titles-lexicon li a {
    display: block;
    text-decoration: none;
    background-color: #B99E7A; /* Use your theme's button color */
    color: #fff; /* Use your theme's button text color */
    padding: 5px 10px; /* Adjust padding as needed */
    border-radius: 36px; /* Match your theme's button border-radius */
    transition: background-color 0.3s;
  }
  .blog-titles-lexicon li a:hover {
    background-color: #202020; /* Slightly lighter on hover */
    color: #fff;
  }
</style>

<div class="blog-titles-lexicon">
  {% if section.blocks.size > 0 %}
    {% assign selected_blog_handle = section.settings.blog %}
    {% assign articles = blogs[selected_blog_handle].articles %}
    {% for block in section.blocks %}
      {% assign letter = block.settings.letter | upcase %}
      <div class="letter-group">
        <h2>{{ letter }}</h2>
        <ul>
          {% for article in articles %}
            {% assign first_letter = article.title | slice: 0, 1 | upcase %}
            {% if first_letter == letter %}
              <li><a href="{{ article.url }}" class="button">{{ article.title }}</a></li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    {% endfor %}
  {% endif %}
  <script>
  document.addEventListener('DOMContentLoaded', function() {
    const blogHandle = '{{ section.settings.blog }}';
    let allArticles = [];
    
    function fetchArticles(page = 1) {
      fetch(`/blogs/${blogHandle}/articles.json?page=${page}&limit=50`)
        .then(response => response.json())
        .then(data => {
          allArticles = allArticles.concat(data.articles);
          
          if (data.articles.length === 50) {
            // If 50 articles are returned, there might be more to load
            fetchArticles(page + 1);
          } else {
            // All articles have been loaded
            displayArticles(allArticles);
          }
        })
        .catch(error => console.error('Error loading articles:', error));
    }
    
    function displayArticles(articles) {
      articles.forEach(article => {
        // Implement logic to display articles
        // For example, group by the first letter and append to the corresponding section
        const firstLetter = article.title.toUpperCase().charAt(0);
        const letterGroup = document.querySelector(`.letter-group h2:contains('${firstLetter}')`).parentElement;
        if (letterGroup) {
          const ul = letterGroup.querySelector('ul');
          const li = document.createElement('li');
          li.innerHTML = `<a href="${article.url}" class="button">${article.title}</a>`;
          ul.appendChild(li);
        }
      });
    }
    
    fetchArticles();
  });
</script>

</div>