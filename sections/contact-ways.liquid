<div class="p-3 md:p-10">
  <div class="flex flex-col justify-between gap-2 rounded-xl bg-[#f7f7f7] px-4 py-6 shadow-sm lg:flex-row lg:items-center">
    <div class="grid w-full items-center justify-between gap-5 px-5 text-center font-serif md:flex">
      <span class="text-center text-2xl">{{ section.settings.title }}</span>
      {% for block in section.blocks %}
        <a class="no-underline flex w-full items-center justify-center gap-2 rounded-full bg-[#c1a57e] px-4 py-2 text-white md:w-fit" href="{{ block.settings.link }}" rel="nofollow noopener">
          {{ block.settings.icon_svg }}
          <span style="vertical-align: inherit;" class="text-lg"> {{ block.settings.text }} </span>
        </a>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Codext-Contact",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Do you have any questions about this watch?"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "liquid",
          "id": "icon_svg",
          "label": "Icon Content"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Codext-Contact"
    }
  ]
}
{% endschema %}