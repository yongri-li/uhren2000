<div class="p-3 md:p-10 w-full">
  <div class="flex flex-wrap justify-between gap-2 rounded-xl bg-[#f7f7f7] p-4 shadow-sm w-full">
    <div class="flex w-full flex-col items-center justify-between gap-5 px-5 text-center font-serif md:flex-row">
      <span class="text-xl">{{ section.settings.title }}</span>
      {% for block in section.blocks %}
        <a class="no-underline flex items-center justify-center gap-2 rounded-full bg-[#c1a57e] px-4 py-2 text-white" href="{{ block.settings.link }}" rel="nofollow noopener">
          {{ block.settings.icon_svg }}
          <span class="text-lg" style="vertical-align: inherit;">{{ block.settings.text }}</span>
        </a>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Codext-Contact",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Do you have any questions about this watch?"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "liquid",
          "id": "icon_svg",
          "label": "Icon Content"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Codext-Contact"
    }
  ]
}
{% endschema %}